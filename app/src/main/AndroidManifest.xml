<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ama.lax">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon17"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ama.lax.ui.activities.ExercisePreviewActivity"></activity>
        <activity android:name="com.ama.lax.ui.activities.ActivitiesView" />
        <activity android:name="com.ama.lax.ui.activities.HomeActivity" />
        <activity android:name="com.ama.lax.ui.activities.UserProfileActivity" />
        <activity android:name="com.ama.lax.ui.activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ama.lax.ui.activities.RegisterActivity" />
        <activity android:name="com.ama.lax.ui.activities.LoginActivity" />
        <activity android:name="com.ama.lax.MainActivity" />
    </application>

</manifest>